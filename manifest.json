{
  "manifest_version": 2,
  "name": "Edge Timer Extension",
  "version": "1.0",
  "description": "A timer extension for Microsoft Edge",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/logo.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Edge Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
